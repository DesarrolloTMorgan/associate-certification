<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/rg_color_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_success_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonTint="@color/successColor"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_error_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonTint="@color/errorColor"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_warning_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonTint="@color/warningColor"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rb_information_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonTint="@color/infoColor"/>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>